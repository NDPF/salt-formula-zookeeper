
{%- set source_engine = salt['pillar.get']('zookeeper:server:source:engine') %}

{%- load_yaml as base_defaults %}
Debian:
  pkgs:
  - zookeeper
  - zookeeperd
  dir:
    base: /usr/lib/zookeeper
  services:
  - zookeeper
RedHat:
  pkgs:
  - zookeeper
  - zookeeperd
  dir:
    base: /usr/lib/zookeeper
  services:
  - zookeeper
{%- endload %}

{%- set server = salt['grains.filter_by'](base_defaults, merge=salt['pillar.get']('zookeeper:server')) %}